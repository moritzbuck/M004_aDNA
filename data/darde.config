workDir = '/cfs/klemming/scratch/m/morbu/M004_aDNA/work/'

params.base_folder          =  '/cfs/klemming/scratch/m/morbu/M004_aDNA/test_setup/'            // Base folder for all input/output
params.script_folder        =  '/cfs/klemming/home/m/morbu/projects/mosaic/M004_aDNA/scripts/' // Folder containing the Python script
params.fastq_dir            =  '/cfs/klemming/projects/supr/fume/raw_data/central_arctic_ocean/ancient_dna/full_batch'      // Directory containing paired FASTQ files
params.db_dir               =  '/cfs/klemming/scratch/m/morbu/dbs/nt'   // Directory containing BLAST database files
params.fasta_db_dir         =  '/cfs/klemming/scratch/m/morbu/dbs/nt/extra_dbs'   // Directory containing BLAST database files
params.script_name          =  '/home/moritz/projects/mosaic/M004_aDNA/scripts/process.py' // Python script to run
params.bowtie_preset        =  "new_holi"                                    // Bowtie2 preset: "slow", "less_slow", "new_holi", "bowtie2_default"
params.identity_cutoff      =  0.95                                         // Minimum identity cutoff for filtering SAM files from bowtie2
params.accession2taxid_path =  '/cfs/klemming/scratch/m/morbu/dbs/all_accession2taxid.sdb' // Path to accession2taxid Rdb files
params.dust_threshold       =  4                                            // Dust threshold for filtering low-complexity reads with sga preprocess
params.min_length           =  100                                           // Minimum length for filtering reads with sga preprocess
params.out_dir              =  "/cfs/klemming/home/m/morbu/data/M004_aDNA/results/"               // Output directory
params.threads              =  128                                          // Number of threads to use
params.extra_taxa           = ['Delphinidae', 'Pinnipedia', 'Cetacea', 'Cephalopoda' ]


process {
    withLabel: 'no_cpu' {
        cpus = 0 
    }
    withLabel: 'low_cpu' {
        cpus = 1 
    }
    withLabel: '!low_cpu' {
        cpus = params.threads
    }
}

process.executor        = 'local'
process.cpus            = params.threads